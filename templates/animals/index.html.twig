{% extends 'base.html.twig' %}

{% block title %}Nos Animaux{% endblock %}

{% block body %}
    <h1>Nos Animaux</h1>
    <div class="mb-4">
        <a href="{{ path('app_animals_new') }}" class="btn btn-success">Ajouter un animal</a>
    </div>
    <div class="row">
        {% for animal in animals %}
            <div class="col-md-4">
                <div class="card mb-4">
                    {% if animal.image %}
                        <img src="{{ animal.image.url }}" class="card-img-top" alt="{{ animal.name }}">
                    {% else %}
                        <img src="placeholder.jpg" class="card-img-top" alt="{{ animal.name }}">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ animal.name }}</h5>
                        <a href="{{ path('app_animals_show', {'id': animal.id}) }}" class="btn btn-primary">Voir plus</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun animal trouv√©</p>
        {% endfor %}
    </div>
{% endblock %}
