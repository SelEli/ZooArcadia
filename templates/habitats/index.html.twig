{% extends 'base.html.twig' %}

{% block title %}Nos habitats{% endblock %}

{% block body %}
    <h1>Nos Habitats</h1>
    <div class="row">
        {% for habitat in habitats %}
            <div class="col-md-4">
                <div class="card mb-4">
                    {% if habitat.image %}
                        <img src="{{ habitat.image.url }}" class="card-img-top" alt="{{ habitat.name }}">
                    {% else %}
                        <img src="placeholder.jpg" class="card-img-top" alt="{{ habitat.name }}">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ habitat.name }}</h5>
                        <a href="{{ path('app_habitats_show', {'id': habitat.id}) }}" class="btn btn-primary">Voir plus</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun habitat trouv√©</p>
        {% endfor %}
    </div>
{% endblock %}
