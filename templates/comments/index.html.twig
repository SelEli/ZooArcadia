{% extends 'base.html.twig' %}

{% block title %}Comments index{% endblock %}

{% block body %}
    <h1>Comments index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Comment</th>
                <th>Date</th>
                <th>IsVisible</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.name }}</td>
                <td>{{ comment.comment }}</td>
                <td>{{ comment.date ? comment.date|date('Y-m-d') : '' }}</td>
                <td>{{ comment.isVisible ? 'Yes' : 'No' }}</td>
                <td>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a href="{{ path('app_comments_show', {'id': comment.id}) }}">show</a>
                        <a href="{{ path('app_comments_edit', {'id': comment.id}) }}">edit</a>
                        {% if not comment.isVisible %}
                            <form method="post" action="{{ path('app_comments_validate', {'id': comment.id}) }}" style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('validate' ~ comment.id) }}">
                                <button type="submit" class="btn btn-success btn-sm">Validate</button>
                            </form>
                        {% endif %}
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_comments_new') }}">Create new</a>
{% endblock %}
