{% extends 'base.html.twig' %}

{% block title %}Détail de l'utilisateur{% endblock %}

{% block body %}
    <h1>Détail de l'utilisateur</h1>
    <table class="table">
        <tr>
            <th>Email</th>
            <td>{{ user.email }}</td>
        </tr>
        <tr>
            <th>Rôle</th>
            <td>{{ user.role ? user.role.name : 'Aucun rôle' }}</td>
        </tr>
    </table>
    <a href="{{ path('user_index') }}" class="btn btn-primary">Retour à la liste</a>
    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning">Modifier</a>
    {{ include('registration/_delete_form.html.twig') }}
{% endblock %}
