{% extends 'base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Email</th>
                <th>Rôle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.email }}</td>
                    <td>{{ user.role ? user.role.name : 'Aucun rôle' }}</td>
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}">Afficher</a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}">Modifier</a>
                        {{ include('registration/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">Aucun utilisateur trouvé</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
